# Generated by go run ./cmd/gen github-manifest; DO NOT EDIT.
name: {{ .Name }}
description: {{ .Description }}
branding:
  icon: {{if eq .ID "copilot"}}message-circle{{else}}database{{end}}
author: 'Ariga'
{{- if .Inputs }}
inputs:
{{- range $name, $input := .SortedInputs }}
  {{ $name }}:
    description: {{ $input.Description | yaml 6 | trimnl }}{{ if $input.Required }}
    required: true{{ end }}{{ with $input.Default }}
    default: {{ . | quote }}{{ end }}
{{- end }}
{{- end }}
{{- if .Outputs }}
outputs:
{{- range $name, $output := .SortedOutputs }}
  {{ $name }}:
    description: {{ $output.Description | yaml 6 | trimnl }}
    value: {{ $name | printf "${{ steps.action.outputs.%s }}" }}
{{- end }}
{{- end }}
runs:
  using: composite
  steps:
    - id: action
      run: {{ printf "${{ github.action_path }}/%s %s" .Shim .ID }}
      shell: bash
      working-directory: {{ printf "${{ inputs.working-directory }}" }}
{{- if .Inputs }}
      env:
{{- range $name, $input := .SortedInputs }}
        {{ $name | printf "input_%s" | env }}: {{ $name | printf "${{ inputs.%s }}" }}
{{- end }}
{{- end }}
