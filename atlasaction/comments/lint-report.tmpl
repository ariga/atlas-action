{{- define "lint-report" -}}
<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Step</th>
      <th>Result</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <div align="center">{{- assetsImage "success.svg" | image "20px" -}}</div>
      </td>
      <td>
        {{- $fileCount := len .Files }}
        {{ if $fileCount }}{{ $fileCount }} new{{ else }}No{{ end }} migration file{{ if ne $fileCount 1 }}s{{ end }} detected
      </td>
      <td>{{- if not .Files }}&nbsp;{{ else }}{{ range $i, $f := .Files }}{{ if $i }}<br/>{{ end }}{{ $f.Name }}{{- end -}}{{- end -}}</td>
    </tr>
{{- with .URL }}
    <tr>
      <td>
        <div align="center">{{ assetsImage "success.svg" | image "20px" }}</div>
      </td>
      <td>ERD and visual diff generated</td>
      <td>
        {{- printf "%s#erd" . | link "View Visualization" -}}
      </td>
    </tr>
{{- end }}
{{- if not (hasComments .) }}
    <tr>
      <td>
        <div align="center">
        {{- assetsImage "success.svg" | image "20px" -}}
        </div>
      </td>
      <td>No issues found</td>
      <td>{{- with .URL }}{{ . | link "View Report" }}{{- end -}}</td>
    </tr>
{{- end }}
{{- if hasComments . -}}
  {{- range $step := .Steps -}}
    {{- if stepHasComments $step -}}
    <tr><td><div align="center">
      {{- if stepHasErrors $step -}}
          {{- assetsImage "error.svg" | image "20px" -}}
      {{- else -}}
          {{- assetsImage "warning.svg" | image "20px" -}}
        </div>
      {{- end -}}
      </td><td>{{ $step.Name }}<br/>{{ $step.Text }}</td><td>
      {{- if and $step.Error (not $step.Result) -}}
        {{- $step.Error -}}
      {{- else if $step.Result -}}
        {{- range $step.Result.Reports -}}
          {{- with .Text }}<b>{{ . | firstUpper }}</b><br/>{{- end -}}
          {{- range .Diagnostics -}}
            {{- .Text -}}
            {{- with .Code -}}
              &nbsp;{{- printf "https://atlasgo.io/lint/analyzers#%s" . | link (printf "(%s)" . ) -}}
            {{- end -}}
            <br/>
          {{- end -}}
        {{- end -}}
      {{- end -}}
      </td></tr>
    {{- end -}}
  {{- end -}}
{{- end }}
{{- with .URL -}}
    <tr><td colspan="4"><div align="center">Read the full linting report on {{ . | link "Atlas Cloud" -}}
        </div></td></tr>
{{- end -}}
  </tbody></table>
{{- end -}}